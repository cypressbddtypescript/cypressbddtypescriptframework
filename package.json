{
  "name": "base-cypress-cucumber-typescript",
  "version": "1.0.0",
  "description": "BDD, Cypress + Cucumber + Typescript",
  "main": "",
  "scripts": {
    "cypress:open": "cypress open",
    "test": "npx cypress run tags='@smoke'"
  },
  "keywords": [
    "BDD",
    "cucumber",
    "cypress",
    "qa",
    "testing",
    "typescript"
  ],
  "author": {
    "name": "Vinod Modewar",
    "email": "vinod.modewar@cesltd.com",
    "url": "https://github.com/cypressbddtypescript/cypressbddtypescriptframework"
  },
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.6",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "multiple-cucumber-html-reporter": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "cypress-cucumber-preprocessor": {
    "cucumberJson": {
      "generate": true,
      "outputFolder": "cypress/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    },
    "nonGlobalStepDefinitions": true,
    "stepDefinitions": [
      "cypress/e2e/steps/**/*.ts"
    ],
    "html": {
      "enabled": true
    }
  }
}
